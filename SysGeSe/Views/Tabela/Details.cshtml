
@{
    Layout = null;
}

@model SysGeSe.Models.Tabela
@{
    ViewBag.Title = "Detalhes";
}

<div class="container">
    <div class="modal-dialog prn-modal">
        <div class="modal-content ">
            <div class="modal-header">
                <h4 class="modal-title">Detalhes da TABELA - ID: @Model.Id</h4>

            </div>
            <div class="modal-body">
                <div class="row g-0">
                    <div class="col-lg-6 mb-2">
                        <label for="tabela" class="form-label">Tabela</label>
                        <input type="text" disabled class="form-control prn-inputs" id="tabela" value="@Model.Nome">
                    </div>

                    <div class="col-lg-2 mb-2">
                        <label for="cad" class="form-label">Cadastro</label>
                        <input type="text" disabled class="form-control prn-inputs" id="cad" value="@Model.DataCad">

                    </div>

                    <div class="col-lg-2 mb-2">
                        <label for="alt" class="form-label">Alteração</label>
                        <input type="text" disabled class="form-control prn-inputs" id="cad" value="@Model.DataCad">

                    </div>
                    <div class="col-lg-2 mb-2">
                        <label for="atv" class="form-label">Ativo</label>
                        @if (Model.Status == 1)
                        {


                            <input type="text" disabled class="form-control" id="atv" value="SIM">
                        }
                        else
                        {
                            <input style="color:red !important;" type="text" disabled class="form-control" id="atv" value="NÃO">
                        }

                    </div>

                </div>

                <div class="row g-0">
                    <div class="mb-3 col-lg-12">
                        @Html.LabelFor(m => m.Obs, new { @class = "col-sm-2 col-form-label" })
                        @Html.TextAreaFor(m => m.Obs, new { @class = "form-control  prn-inputs", placeholder = "Digite a objservação, se houver", onkeyup = "maiuscula(this);", name = "nome", rows = "4", cols = "50", maxlength = "500", disabled=true })

                    </div>


                </div>







            </div>

            <div class="modal-footer">
                <a class="btn btn-primary" onclick="chamarEdit(@Model.Id,true)" style="border-color: #7a7a7a;"><i class="fas fa-edit p-1"></i> Editar</a>
                <a class="btn btn-dark" onclick="fecharModal()" style="border-color: #7a7a7a;"><i class="fas fa-solid fa-arrow-left"></i> Voltar</a>

            </div>

        </div> <!--fim modal content-->
    </div> <!--fim modal dialog-->

</div>